package chapter6;

import java.util.Scanner;

public class Lab6 {

	public static void main(String[] args) {
		int num1, num2, largest;
		Scanner input = new Scanner(System.in);
		System.out.println("Please enter two numbers.");
		
		num1 = input.nextInt();
		num2 = input.nextInt();
		
//		find maximum
		
		if(num1 > num2)
			largest = num1;
		else 
			largest = num2;
		
		
		
		char grade;
		int score;
		
		
		System.out.println("Please enter your score.");
		score = input.nextInt();
		
		if(score>= 90){
			grade = 'A';
		}else if(score >=80){
			grade = 'B';
		}else if(score >=70){
			grade = 'C';
		}else if(score >=60){
			grade = 'D';
		}else {
			grade = 'F';
		}
		
		System.out.println("The grade is " + grade);
		System.out.println(reverse(123));
	}
	
	public static int max(int num1, int num2){
		
		return num1>num2?num1:num2;
	}
	
	
	public static char getGrade(int score){
		
		if(score>= 90){
			return 'A';
		}else if(score >=80){
			return 'B';
		}else if(score >=70){
			return 'C';
		}else if(score >=60){
			return 'D';
		}else {
			return 'F';
		}
	}
	
	public static int sumDigits(long n){
		int sum = 0;
		while(n>0){
			sum += n%10;
			n/=10;
		}
		return sum;
	}
	
	public static int reverse(int number){
		int base = 1;
		int result = 0;
		while(number > 0){
			result += (number%10)*base;
			base *=10;
			number/=10;
		}
		return result;
	}
}
